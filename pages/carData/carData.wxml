<!-- pages/carData/carData.wxml -->
<view class="carData" hover-class="none" hover-stop-propagation="false">
  <view class="handbook" hover-class="none" hover-stop-propagation="false" wx:for="{{carData}}" wx:if="{{item.type===5}}" wx:key="{{item.manual_id}}">
    <image class="img_bg" src="/images/weixiu.png" mode="" lazy-load="false" binderror="" bindload=""></image>
    <view class="info_wrap" hover-class="none" hover-stop-propagation="false">
      <view class="demio" hover-class="none" hover-stop-propagation="false">{{brand}}—{{series}}</view>
      <view class="title" hover-class="none" hover-stop-propagation="false">{{item.typeName}}</view>
      <view class="pay_btn" hover-class="none" hover-stop-propagation="false" 
      data-manual_id="{{item.manual_id}}" bindtap='openModal'>
        <text class="num" selectable="false" space="false" decode="false">花费50元</text>
        (可积分抵扣)
        <text class="look" selectable="false" space="false" decode="false">查看详情</text>
      </view>
      <view class="owner_wrap" hover-class="none" hover-stop-propagation="false">
        资料贡献人：
        <text class="owner">{{item.user_name}}</text>
      </view>
    </view>
  </view>
  <view class="diagram" hover-class="none" hover-stop-propagation="false" wx:for="{{carData}}" wx:if="{{item.type===3}}" wx:key="{{item.manual_id}}">
    <image class="img_bg" src="/images/diantu.png" mode="" lazy-load="false" binderror="" bindload=""></image>
    <view class="info_wrap" hover-class="none" hover-stop-propagation="false">
      <view class="demio" hover-class="none" hover-stop-propagation="false">{{brand}}—{{series}}</view>
      <view class="title" hover-class="none" hover-stop-propagation="false">{{item.typeName}}</view>
      <view class="pay_btn" hover-class="none" hover-stop-propagation="false" 
      data-manual_id="{{item.manual_id}}" bindtap='openModal'>
        <text class="num" selectable="false" space="false" decode="false">花费50元</text>
        (可积分抵扣)
        <text class="look" selectable="false" space="false" decode="false">查看详情</text>
      </view>
      <view class="owner_wrap" hover-class="none" hover-stop-propagation="false">
        资料贡献人：
        <text class="owner">{{item.user_name}}</text>
      </view>
    </view>
  </view>
</view>

<!-- modal弹窗-->
<modal-cmp show="{{showModal}}">
  <view class='modal-content'>
    <scroll-view scroll-y class='main-content'>
      <image src='/images/close.png' class='close-modal' bindtap='closeModal'></image>
      <view class='money'>
        <text>50</text>
        <text>元</text>
      </view>
      <radio-group class='radio-group' bindchange="radioChange">
        <label>
          <radio value='1' checked='true'></radio>
          <view>积分余额{{pointsBalance}}</view>
          <text>本次积分最多可以抵扣{{pointsBalance>=500?50:pointsBalance/10}}元</text>
        </label>
        <label>
          <radio value='2'></radio>
          <view>微信支付</view>
        </label>
      </radio-group>
      <view class='notice' wx:if="{{seleted==1}}">
        支付 <text>{{pointsBalance/10>=50?0:(500-pointsBalance)/10}}</text> 元 + 元积分抵扣 <text>{{pointsBalance/10>=50?50:pointsBalance/10}}</text> 元
      </view>
      <view class='modal-btn' bindtap='toPay'>支付</view>
    </scroll-view>
  </view>
</modal-cmp>