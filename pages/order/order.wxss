/* pages/queryHistory/queryHistory.wxss */
.order_wrap{
	min-height: 100%;
}
.list_wrap{
  box-sizing: border-box;
  width: 688rpx;
  height: 370rpx;
  margin: 0 auto;
	background-color: #ffffff;
	box-shadow: 1px -1px 12px 1px	rgba(0, 0, 0, 0.09);
  border-radius: 30rpx;
  padding-left: 30rpx;
  padding-right: 20rpx;
  position: relative;
  margin-top: 45rpx;
}
.list_wrap:last-child{
  margin-bottom: 45rpx;
}
.order_num{
  padding-top:32rpx;
  padding-bottom: 25rpx;
  border-bottom:1px solid #eeeeee;
}
.text{
  font-size: 14px;
	color: #333333;
}
.title_wrap{
  display: flex;
  align-items: center;
  padding-top: 23rpx;
  padding-bottom: 36rpx;
}
.img_wrap{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 70rpx;
  height: 70rpx;
  background-color: #f4f4f4;
  box-shadow: 2rpx 1rpx 12rpx 1rpx	rgba(119, 119, 119, 0.07);
  margin-right: 28rpx;
}
.title_img{
  width: 46rpx;
  height: 57rpx;
}
.title_text{
  font-size: 16px;
  color: #333333;
}
.time_wrap{
  font-size: 13px;
	color: #666666;
}
.time{
  color: #333333;
}
.integral_wrap{
  font-size: 13px;
	color: #666666;
}
.integral{
  font-size: 14px;
	color: #222222;
}
.person_wrap{
  font-size: 12px;
	color: #999999;
}
.person{
  color: #333333;
}
.btn_wrap{
  width: 170rpx;
	height: 60rpx;
	background-color: #386cff;
  border-radius: 20rpx;
  text-align: center;
  position: absolute;
  right: 60rpx;
  bottom: 60rpx;
}
.btn_text{
  font-size: 13px;
  color: #ffffff;
  line-height: 60rpx;
}
.btn_wrap_no{
  opacity: 0.3;
}