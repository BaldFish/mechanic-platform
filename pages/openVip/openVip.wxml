<!-- pages/openVip/openVip.wxml -->
<view class="openVip" hover-class="none" hover-stop-propagation="false">
  <view class="img_wrap" hover-class="none" hover-stop-propagation="false">
    <image class="img" src="/images/VIP_img.png" mode="" lazy-load="false" binderror="" bindload=""></image>
  </view>
  <view class="description" hover-class="none" hover-stop-propagation="false">
    <view class="des_title" hover-class="none" hover-stop-propagation="false">
      <view class="des">开通VIP用户海量维修资料库随查随用</view>
      <view class="des_head">省钱又省心</view>
    </view>
    <view class="des_list_wrap" hover-class="none" hover-stop-propagation="false">
      <view class="des_list list_title" hover-class="none" hover-stop-propagation="false">
        <view class="tq" hover-class="none" hover-stop-propagation="false">特权</view>
        <image class="vip_logo" src="/images/VIP_logo.png" lazy-load="false" binderror="" bindload=""></image>
        <view class="fv" hover-class="none" hover-stop-propagation="false">非VIP</view>
      </view>
      <view class="des_list" hover-class="none" hover-stop-propagation="false">
        <view class="list1" hover-class="none" hover-stop-propagation="false">查询价格</view>
        <view class="list2">1181个车型可查</view>
        <view class="list3" hover-class="none" hover-stop-propagation="false">50元/次/份</view>
      </view>
      <view class="line1" hover-class="none" hover-stop-propagation="false"></view>
      <view class="des_list" hover-class="none" hover-stop-propagation="false">
        <view class="list1" hover-class="none" hover-stop-propagation="false">查询时间</view>
        <view class="list2">一年无限次查询</view>
        <view class="list3" hover-class="none" hover-stop-propagation="false">开通后7天有效</view>
      </view>
    </view>
  </view>
  <view class="vip_btn" hover-class="none" hover-stop-propagation="false" wx:if="{{userInfo.isvip===false}}" bindtap='openModal'>
    立即开通
  </view>
  <view class="vip_btn" hover-class="none" hover-stop-propagation="false" wx:if="{{userInfo.isvip===true}}" bindtap='openModal'>
    立即续费
  </view>
</view>
<!-- modal弹窗 -->
<modal-cmp show="{{showModal}}">
  <view class='modal-content'>
    <scroll-view scroll-y class='main-content'>
      <view class='img-box' bindtap='closeModal'>
        <image src='/images/close.png' class='close-modal'></image>
      </view>
      <view class='money'>
        <text wx:if="{{seleted==1}}">{{pointsBalance>=1000?99:(1990-pointsBalance)/10}}</text>
        <text wx:else>199</text>
        元
      </view>
      <radio-group class='radio-group' bindchange="radioChange">
        <label>
          <radio value='1' checked='true'></radio>
          <view>积分余额{{pointsBalance}}</view>
        </label>
        <label wx:if="{{seleted==1}}">
          <!-- <text>本次积分最多可以抵扣{{pointsBalance>=1000?100:pointsBalance/10}}元</text> -->
          <view class='notice'>
            积分抵扣
            <text>{{pointsBalance>=1000?100:pointsBalance/10}}</text>
            元 + 微信支付
            <text>{{pointsBalance>=1000?99:(1990-pointsBalance)/10}}</text>
            元
          </view>
        </label>
        <label>
          <radio value='2'></radio>
          <view>微信支付</view>
        </label>
      </radio-group>
      <view class='modal-btn' bindtap='toPay'>支付</view>
    </scroll-view>
  </view>
</modal-cmp>