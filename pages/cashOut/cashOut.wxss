/* pages/cashOut/cashOut.wxss */
.container{
  width: 550rpx;
	height: 450rpx;
	background-color: #ffffff;
	box-shadow: 0 0 53rpx 8rpx rgba(94, 123, 247, 0.1);
	border-radius: 30rpx;
  margin: 0 auto;
  margin-top: 48rpx;
  padding: 0 40rpx
}
.container .title{
  font-size: 36rpx;
	color: #333333;
  padding-top: 60rpx;
  display: block
}
.input-box{
  height: 70rpx;
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #e2e8f3;
  margin: 70rpx 0;
  justify-content: space-between;
}
.input-box .input-box-left{
  display: flex;
  flex-direction: row;
  justify-content: flex-start
}
.input-box .icon{
  font-size: 26rpx;
	color: #333333;
  margin: 10rpx 30rpx 0 0;
}
.input-box input{
  font-size: 24rpx;
}
.input-box .input-box-right{
	font-size: 26rpx;
	color: #386cff;
  margin-top: 10rpx
}
.sub-btn{
  width: 550rpx;
	height: 88rpx;
	background-color: #386cff;
	border-radius: 40rpx;
  line-height: 88rpx;
  color: #ffffff;
  text-align: center;
  font-size: 36rpx;
}

.close-modal{
  width: 26rpx;
	height: 26rpx;
  margin: 20rpx 30rpx 0 0;
  float: right;
  position: relative;
  top: -40rpx
}
.main-content .money{
  margin: 56rpx 0 32rpx 90rpx
}
.main-content .money text:nth-child(1){
	font-size: 72rpx;
	color: #000000;
}
.main-content .money text:nth-child(2){
	font-size: 30rpx;
	color: #000000;
}
/* 修改radio默认样式 */
radio{
  border-radius: 50%;
  width: 40rpx;/* 最好是4的倍数，不然会不在中间 */
  height: 40rpx;
  border: 2rpx solid #386cff;/* 设置边框（外圆） */
  font-size: 0;/* 让边框重合 */
}
radio .wx-radio-input{
   border-radius: 50%;
   width: 40rpx;
   height: 40rpx; 
   border: none;/* 替换边框（隐藏原有边框） */
}
radio .wx-radio-input.wx-radio-input-checked{
  background-color: #ffffff !important;
}
radio .wx-radio-input.wx-radio-input-checked::before{
   border-radius: 50%;
   width: 24rpx; 
   height: 24rpx; 
   text-align: center;
   font-size:0rpx; /* 对勾大小 去掉 */
   background-color: #386cff; 
   transform:translate(-50%, -50%) scale(1);
   -webkit-transform:translate(-50%, -50%) scale(1);
}
