<!-- pages/IntegralList/IntegralList.wxml -->
<view class="integralList" hover-class="none" hover-stop-propagation="false">
  <view class="title_num" hover-class="none" hover-stop-propagation="false">
    <image class="head_bg" src="/images/head_bg.png"></image>
    <view class="num_text" hover-class="none" hover-stop-propagation="false">
      <view class="num" hover-class="none" hover-stop-propagation="false">{{balance}}</view>
      <view class="text" hover-class="none" hover-stop-propagation="false">元积分</view>
    </view>
  </view>
  <view class="detail_wrap" hover-class="none" hover-stop-propagation="false">
    <view class="detail_title" hover-class="none" hover-stop-propagation="false">
      ---
      <text class="">积分明细</text>
      ---
    </view>
    <view class="detail_list" hover-class="none" hover-stop-propagation="false" wx:for="{{integralList}}" wx:key="*this">
      <view class="list_left" hover-class="none" hover-stop-propagation="false">
        <view class="left_up" hover-class="none" hover-stop-propagation="false">{{item.rule}}</view>
        <view class="left_down" hover-class="none" hover-stop-propagation="false">
          {{item.updated_at}}
        </view>
      </view>
      <view class="{{item.value<0?'list_right_out':'list_right'}}" hover-class="none" hover-stop-propagation="false">
        {{item.value}}
      </view>
    </view>
  </view>
</view>